{% extends "../../src/twig/layouts/single-column.twig" %}

{% set title = "Templates - Couleurs" %}
{% set class = "template-colors" %}
{% set templates = true %}

{% block content %}

    <h1 class="template-title">Couleurs</h1>
    <div class="template-colors-wrapper">
        <button class="btn-add-color" onclick="addColorPreview()"><span>Ajouter<br>une couleur</span></button>
    </div>

    <div class="template-color is-template">
        <span class="template-color-preview"></span>
        <div class="template-color-bottom">
            <input type="text" class="template-color-input template-color-name" value="c-">
            <input type="text" class="template-color-input template-color-value" value="#">
            <button class="btn-remove-color" onclick="removeColorPreview()">{% include '../svg/delete.svg' %}</button>
        </div>
    </div>

    <div class="json-preview-wrapper">
        <div class="json-preview-buttons">
            <button onclick="generateColorsJSON()">Générer</button>
            <button onclick="importColorsJSON()">Importer</button>
        </div>
        <button class="json-preview-download" onclick="downloadColorsJSON()">{% include '../svg/download.svg' %}</button>
        <textarea class="json-preview"></textarea>
    </div>

    <script>
    document.addEventListener("DOMContentLoaded", function(event) {
        getColors();
    });
    </script>

{% endblock %}
