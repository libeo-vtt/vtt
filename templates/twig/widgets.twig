{% extends "../../src/twig/layouts/single-column.twig" %}

{% set title = "Templates - Widgets" %}
{% set class = "template-widgets" %}
{% set templates = true %}

{% block content %}

    <h1 class="template-title">Widgets</h1>

    <h2 class="template-subtitle">Slider</h2>
    <p data-height="350" data-theme-id="23608" data-slug-hash="mPGxzz" data-default-tab="result" data-user="lefoy" data-embed-version="2" class="codepen">See the Pen <a href="https://codepen.io/lefoy/pen/mPGxzz/">jQuery Slider Plugin</a> by lefoy (<a href="http://codepen.io/lefoy">@lefoy</a>) on <a href="http://codepen.io">CodePen</a>.</p>

    <hr>

    <h2 class="template-subtitle">Folder</h2>
    {# include "../widgets/folder.twig" #}

    <hr>

    <h2 class="template-subtitle">Tab</h2>
    {# include "../widgets/tab.twig" #}

    <hr>

    <h2 class="template-subtitle">Pagination</h2>
    {% pagination "Previous", "1..10", "Next" %}

    <hr>

    <h2 class="template-subtitle">Breadcrumb</h2>
    {% breadcrumb "Accueil", "Titre de section", "Titre de sous-section" %}

    <hr>

    <div class="grid">
        <div class="grid-wrapper">
            <div class="col-1-2 col-1-1-mobile">
                <h2 class="template-subtitle">Youtube</h2>
                {% youtube "QJ0bAAA-QQU" %}
            </div>
            <div class="col-1-2 col-1-1-mobile">
                <h2 class="template-subtitle">Vimeo</h2>
                {% vimeo "108679294" %}
            </div>
        </div>
    </div>

    <hr>

    <div class="grid">
        <div class="grid-wrapper">
            <div class="col-1-2 col-1-1-mobile">
                <h2 class="template-subtitle">Google Map</h2>
                {% map "Lebourgneuf, Québec, Canada" %}
            </div>
            <div class="col-1-2 col-1-1-mobile">
                <h2 class="template-subtitle">Google Map (locked)</h2>
                {% map "Lebourgneuf, Québec, Canada", "locked" %}
            </div>
        </div>
    </div>

    <script async src="//assets.codepen.io/assets/embed/ei.js"></script>

{% endblock %}
